{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "DOM"
        ],
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src",
        "./build/proto"
    ]
}
